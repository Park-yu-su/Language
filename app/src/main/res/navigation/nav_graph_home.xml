<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_home"
    app:startDestination="@id/homeFragment"
    >

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.language.ui.home.HomeFragment"
        android:label="홈"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_testFragment"
            app:destination="@id/testFragment"
            app:enterAnim="@anim/create_from_right"
            app:exitAnim="@anim/delete_to_left"
            app:popEnterAnim="@anim/pop_create_from_left"
            app:popExitAnim="@anim/pop_delete_from_right"
            />
        <action
            android:id="@+id/action_homeFragment_to_makeVocFragment"
            app:destination="@id/makeVocFragment" />
    </fragment>

    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.language.ui.test.TestFragment"
        tools:layout="@layout/fragment_test" />

    <fragment
        android:id="@+id/makeVocFragment"
        android:name="com.example.language.ui.makeVoc.MakeVocFragment"
        android:label="단어장 만들기"
        tools:layout="@layout/fragment_make_voc" >
        <action
            android:id="@+id/action_makeVocFragment_to_addNewVocFragment"
            app:destination="@id/addNewVocFragment" />
        <action
            android:id="@+id/action_makeVocFragment_to_addVocInExitFragment"
            app:destination="@id/addVocInExitFragment" />
    </fragment>

    <fragment
        android:id="@+id/addNewVocFragment"
        android:name="com.example.language.ui.makeVoc.AddNewVocFragment"
        android:label="새 단어장 만들기"
        tools:layout="@layout/fragment_add_new_voc" >
        <action
            android:id="@+id/action_addNewVocFragment_to_selectWayAddVocFragment"
            app:destination="@id/selectWayAddVocFragment" >
            <argument
                android:name="vocName"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/addVocInExitFragment"
        android:name="com.example.language.ui.makeVoc.AddVocInExitFragment"
        android:label="기존 단어장에 추가하기"
        tools:layout="@layout/fragment_add_voc_in_exit" >
        <action
            android:id="@+id/action_addVocInExitFragment_to_selectWayAddVocFragment"
            app:destination="@id/selectWayAddVocFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectWayAddVocFragment"
        android:name="com.example.language.ui.makeVoc.SelectWayAddVocFragment"
        android:label="단어 추가 방식 선택"
        tools:layout="@layout/fragment_select_way_add_voc" >
        <action
            android:id="@+id/action_selectWayAddVocFragment_to_addVocManuallyFragment"
            app:destination="@id/addVocManuallyFragment" />
        <argument
            android:name="vocName"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/addVocManuallyFragment"
        android:name="com.example.language.ui.makeVoc.AddVocManuallyFragment"
        android:label="단어 직접 추가"
        tools:layout="@layout/fragment_add_voc_manually" >
        <action
            android:id="@+id/action_addVocManuallyFragment_to_addVocFinalCheckFragment"
            app:destination="@id/addVocFinalCheckFragment" />
    </fragment>

    <fragment
        android:id="@+id/addVocFinalCheckFragment"
        android:name="com.example.language.ui.makeVoc.AddVocFinalCheckFragment"
        android:label="단어 추가 완료"
        tools:layout="@layout/fragment_add_voc_final_check" />


</navigation>