<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    tools:context=".ui.study.StudyFragment">

    <!-- 중앙 기준선 (유지) -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/study_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <!-- 내 단어장 목록 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/study_myVoc_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingHorizontal="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_btn_primary_press"
        app:backgroundTint="@null"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/study_search_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/study_myVoc_tv"
        style="@style/freesentation5_11sp_icon"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 단어장"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/study_myVoc_btn"
        app:layout_constraintBottom_toBottomOf="@id/study_myVoc_btn"
        app:layout_constraintStart_toStartOf="@id/study_myVoc_btn"
        app:layout_constraintEnd_toEndOf="@id/study_myVoc_btn" />

    <!-- 검색 버튼 -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/study_search_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="85dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:paddingHorizontal="12dp"
        android:background="@drawable/bg_btn_white_press"
        app:backgroundTint="@null"
        app:iconGravity="textStart"
        app:iconTint="@null"
        app:layout_constraintStart_toEndOf="@id/study_myVoc_btn"
        app:layout_constraintEnd_toStartOf="@id/study_guideline"
        app:layout_constraintTop_toTopOf="@id/study_myVoc_btn"
        app:layout_constraintBottom_toBottomOf="@id/study_myVoc_btn" />

    <TextView
        android:id="@+id/study_search_tv"
        style="@style/freesentation5_11sp_icon"
        android:textSize="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단어장 검색"
        app:layout_constraintTop_toTopOf="@id/study_search_btn"
        app:layout_constraintBottom_toBottomOf="@id/study_search_btn"
        app:layout_constraintStart_toStartOf="@id/study_search_btn"
        app:layout_constraintEnd_toEndOf="@id/study_search_btn" />



    <!-- 본체 -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/study_fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/study_myVoc_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:name="androidx.navigation.fragment.NavHostFragment"
        app:navGraph="@navigation/nav_graph_study2"
        app:defaultNavHost="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>