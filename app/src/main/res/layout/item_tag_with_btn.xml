<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@id/tag_bg"
        android:layout_width="61dp"
        android:layout_height="29dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_tag" />

    <TextView
        android:id="@id/tag_id_tv"
        style="@style/pretendard_14sp_medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="# 태그"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@id/tag_bg"
        app:layout_constraintEnd_toEndOf="@id/tag_bg"
        app:layout_constraintStart_toStartOf="@id/tag_bg"
        app:layout_constraintTop_toTopOf="@id/tag_bg" />
    
    <ImageButton
        android:id="@+id/edit_tag_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_tag_btn"
        android:src="@drawable/ic_edit_btn"
        android:backgroundTint="@color/transparent"
        android:layout_marginEnd="12dp" />

    <ImageButton
        android:id="@+id/delete_tag_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_x_btn"
        android:backgroundTint="@color/transparent" />

</androidx.constraintlayout.widget.ConstraintLayout>