<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".ui.test.TestMeaningFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mean_wordImv_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.12"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mean_wordImv_guideLine2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mean_wordImv_guideLine2_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.52"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/mean_wordImv_guideLine3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"/>


    <!--단어 상단 바-->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mean_info_cdv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/Main1_4"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="24dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/mean_back_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back_btn"
        android:layout_marginStart="10dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/mean_info_cdv"
        app:layout_constraintTop_toTopOf="@id/mean_info_cdv"
        app:layout_constraintBottom_toBottomOf="@id/mean_info_cdv"
        />

    <TextView
        android:id="@+id/mean_nickanme_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:layout_marginStart="10dp"
        style="@style/pretendard_16sp_medium"
        app:layout_constraintStart_toEndOf="@+id/mean_back_btn"
        app:layout_constraintTop_toTopOf="@id/mean_info_cdv"
        app:layout_constraintBottom_toBottomOf="@id/mean_info_cdv"
        />



    <!--중간 단어 창-->

    <TextView
        android:id="@+id/mean_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/100"
        style="@style/pretendard_16sp_medium"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/mean_wordImv_guideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ProgressBar
        android:id="@+id/mean_progressbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100"
        android:progress="10"
        android:progressBackgroundTint="@color/Main1_4"
        android:progressTint="@color/Main1_1"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mean_progress_tv"/>


    <TextView
        android:id="@+id/mean_ques_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/pretendard_16sp_medium"
        android:layout_marginTop="10dp"
        android:text="보기 중, 예문에서 쓰인 단어의 뜻을 고르세요"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mean_progressbar"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mean_english_cdv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:backgroundTint="@color/Main1_1"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="24dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mean_ques_tv"
        app:layout_constraintBottom_toBottomOf="@id/mean_wordImv_guideLine2"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/mean_word_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="A"
                style="@style/pretendard_22sp_semibold"
                android:maxLines="1"
                android:gravity="center"
                android:ellipsize="end"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:autoSizeTextType="uniform"
                app:autoSizeMaxTextSize="32sp"
                app:autoSizeMinTextSize="20sp"
                app:autoSizeStepGranularity="1sp"
                android:paddingTop="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mean_example_background"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:backgroundTint="@color/white"
                android:layout_margin="15dp"
                app:cardCornerRadius="24dp"
                app:strokeWidth="0dp"
                app:layout_constraintTop_toBottomOf="@id/mean_word_tv"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>


            <TextView
                android:id="@+id/mean_example_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="I like an apple."
                style="@style/pretendard_20sp_medium"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:gravity="start|center_vertical"
                android:maxLines="3"
                android:ellipsize="end"
                app:layout_constraintTop_toTopOf="@id/mean_example_background"
                app:layout_constraintBottom_toBottomOf="@id/mean_example_background"
                app:layout_constraintStart_toStartOf="@id/mean_example_background"
                app:layout_constraintEnd_toEndOf="@id/mean_example_background"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


    <!--선택창 4개-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mean_answer1_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Main1_4"
        android:text="1번"
        style="@style/pretendard_20sp_semibold"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:rippleColor="@android:color/transparent"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mean_wordImv_guideLine2_5"
        app:layout_constraintBottom_toTopOf="@id/mean_answer2_btn"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mean_answer2_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Main1_4"
        android:text="2번"
        style="@style/pretendard_20sp_semibold"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:rippleColor="@android:color/transparent"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mean_answer1_btn"
        app:layout_constraintBottom_toTopOf="@id/mean_answer3_btn"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mean_answer3_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Main1_4"
        android:text="3번"
        style="@style/pretendard_20sp_semibold"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:rippleColor="@android:color/transparent"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mean_answer2_btn"
        app:layout_constraintBottom_toTopOf="@id/mean_answer4_btn"

        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mean_answer4_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Main1_4"
        android:text="4번"
        style="@style/pretendard_20sp_semibold"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        app:cardCornerRadius="12dp"
        app:strokeWidth="0dp"
        app:rippleColor="@android:color/transparent"
        android:stateListAnimator="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mean_answer3_btn"
        app:layout_constraintBottom_toBottomOf="@id/mean_wordImv_guideLine3"

        />

    <ImageView
        android:id="@+id/mean_checkAnswer_imv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_correct_o"
        android:visibility="invisible"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="@+id/mean_answer1_btn"
        app:layout_constraintBottom_toBottomOf="@+id/mean_answer4_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.53" />





</androidx.constraintlayout.widget.ConstraintLayout>