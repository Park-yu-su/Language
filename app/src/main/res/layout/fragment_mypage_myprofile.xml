<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/myprofile_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/myprofile_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_btn"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            style="@style/freesentation6_20sp_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/myprofile_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="내 정보 관리"
            style="@style/pretendard_22sp_semibold"
            android:textColor="@color/Black"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/myprofile_back_btn"
            app:layout_constraintTop_toTopOf="@id/myprofile_back_btn"
            app:layout_constraintBottom_toBottomOf="@id/myprofile_back_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@id/user_profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toBottomOf="@id/myprofile_topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_default_user_image"
        android:layout_marginTop="40dp" />

    <TextView
        android:id="@id/user_profile_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/user_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="닉네임"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="18dp"/>

    <ImageButton
        android:id="@+id/user_nickname_edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_btn"
        android:backgroundTint="@color/transparent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toBottomOf="@id/user_profile_image"
        app:layout_constraintStart_toEndOf="@id/user_profile_nickname_tv" />

    <ImageView
        android:id="@+id/my_id_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/bg_voc_rounded"
        app:layout_constraintTop_toBottomOf="@id/user_profile_nickname_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="내 ID"
        android:fontFamily="@font/pretendard_semibold"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/my_id_bg"
        app:layout_constraintBottom_toBottomOf="@id/my_id_bg"
        app:layout_constraintStart_toStartOf="@id/my_id_bg"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/my_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a123456789"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="16sp"
        android:textColor="@color/Gray1"
        app:layout_constraintTop_toTopOf="@id/my_id_bg"
        app:layout_constraintBottom_toBottomOf="@id/my_id_bg"
        app:layout_constraintEnd_toStartOf="@id/id_copy_btn"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/id_copy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_copy"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="@id/my_id_bg"
        app:layout_constraintBottom_toBottomOf="@id/my_id_bg"
        app:layout_constraintEnd_toEndOf="@id/my_id_bg" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/self_introduce_bg"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@id/my_id_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_voc_rounded"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/self_introduce_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자기소개"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@id/self_introduce_bg"
            app:layout_constraintBottom_toBottomOf=""
            app:layout_constraintStart_toStartOf="@id/self_introduce_bg"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp" />

        <View
            android:id="@id/border_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorStoreBoxIcon"
            app:layout_constraintTop_toBottomOf="@id/self_introduce_tv"
            app:layout_constraintStart_toStartOf="@id/self_introduce_bg"
            app:layout_constraintEnd_toEndOf="@id/self_introduce_bg"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

        <EditText
            android:id="@+id/self_introduce_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/border_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:hint="자기소개를 입력해주세요"
            android:background="@null"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/my_info_save_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp"
        android:src="@drawable/bg_button_save"
        android:backgroundTint="@color/transparent"
        android:enabled="false" />

</androidx.constraintlayout.widget.ConstraintLayout>