<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Main1_3"
    tools:context=".ui.test.TestSpeakingFragment">



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/speak_wordImv_guideLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15"/>

    <!--단어 상단 바-->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/speak_info_cdv"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="24dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/speak_back_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back_btn"
        android:layout_marginStart="10dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="@id/speak_info_cdv"
        app:layout_constraintTop_toTopOf="@id/speak_info_cdv"
        app:layout_constraintBottom_toBottomOf="@id/speak_info_cdv"
        />

    <TextView
        android:id="@+id/speak_nickanme_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:layout_marginStart="10dp"
        style="@style/pretendard_16sp_medium"
        app:layout_constraintStart_toEndOf="@+id/speak_back_btn"
        app:layout_constraintTop_toTopOf="@id/speak_info_cdv"
        app:layout_constraintBottom_toBottomOf="@id/speak_info_cdv"
        />

    
    
    <!--중간 단어 창-->

    <TextView
        android:id="@+id/speak_progress_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/100"
        style="@style/pretendard_16sp_medium"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/speak_wordImv_guideLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ProgressBar
        android:id="@+id/speak_progressbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:max="100"
        android:progress="10"
        android:progressBackgroundTint="@color/Main1_4"
        android:progressTint="@color/Main1_1"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speak_progress_tv"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/speak_english_cdv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="24dp"
        app:strokeWidth="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/speak_progressbar"/>

    <TextView
        android:id="@+id/speak_word_tv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Your long text here"
        android:maxLines="2"
        android:gravity="center"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="38sp"
        app:autoSizeMinTextSize="12sp"
        app:autoSizeStepGranularity="1sp"
        app:layout_constraintTop_toTopOf="@id/speak_english_cdv"
        app:layout_constraintBottom_toBottomOf="@id/speak_english_cdv"
        app:layout_constraintStart_toStartOf="@id/speak_english_cdv"
        app:layout_constraintEnd_toEndOf="@id/speak_english_cdv"
        />



    <!-- 발음 입력 창 -->

    <ImageButton
        android:id="@+id/spaek_record_btn"
        android:layout_height="0dp"
        android:layout_width="150dp"
        android:backgroundTint="@color/colorPrimary"
        android:src="@drawable/ic_mic"
        android:background="@drawable/bg_circle_button"
        android:elevation="1dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintTop_toTopOf="@id/speak_bottom_view"
        app:layout_constraintBottom_toBottomOf="@id/speak_bottom_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/speak_listen_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spaek_record_btn"
        app:layout_constraintTop_toTopOf="@id/speak_bottom_view"
        app:layout_constraintBottom_toBottomOf="@id/speak_bottom_view"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_listen"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="발음 듣기"
            style="@style/pretendard_14sp_semibold"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/speak_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:clickable="true"
        android:focusable="true"
        android:elevation="1dp"
        app:layout_constraintStart_toEndOf="@id/spaek_record_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/speak_bottom_view"
        app:layout_constraintBottom_toBottomOf="@id/speak_bottom_view"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_nextword"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 단어"
            style="@style/pretendard_14sp_semibold"
            />
    </LinearLayout>

    <View
        android:id="@+id/speak_bottom_view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>