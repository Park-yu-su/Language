<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp"
    android:paddingHorizontal="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_bot_profile_imv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/imv_chatbot"
        app:civ_border_width="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/chat_bot_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="튜터 봇"
        style="@style/pretendard_16sp_medium"
        android:textSize="12sp"
        android:textColor="@color/Black"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintStart_toEndOf="@id/chat_bot_profile_imv"
        app:layout_constraintTop_toTopOf="@id/chat_bot_profile_imv"
        app:layout_constraintBottom_toTopOf="@id/lottie_loading" />


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_loading"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_chat_bot"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/loading_dots2"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:layout_constraintStart_toEndOf="@id/chat_bot_profile_imv"
        app:layout_constraintTop_toBottomOf="@id/chat_bot_name_tv"/>

</androidx.constraintlayout.widget.ConstraintLayout>