<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_dialog_round">

    <LinearLayout
        android:id="@+id/user_img_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/dialog_cancel_cdv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:id="@+id/user_img_1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_user1" />

        <ImageView
            android:id="@+id/user_img_2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_user2"/>

        <ImageView
            android:id="@+id/user_img_3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_user3"/>

        <ImageView
            android:id="@+id/user_img_4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginHorizontal="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_user4"/>

    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@id/dialog_cancel_cdv"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="#FAFAFA"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialog_ok_cdv"
        app:layout_constraintTop_toBottomOf="@id/user_img_ll"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@id/dialog_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="취소"
            style="@style/pretendard_16sp_semibold"
            android:textSize="18sp"
            android:textColor="@color/Gray1" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@id/dialog_ok_cdv"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:backgroundTint="@color/Main1_1"
        app:layout_constraintStart_toEndOf="@id/dialog_cancel_cdv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/dialog_cancel_cdv"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@id/dialog_ok_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="변경"
            style="@style/pretendard_16sp_semibold"
            android:textColor="@color/white" />

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>