<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    tools:context=".ui.friend.FriendHandleFragment">

    <!--상단 바-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/friend_handle_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:id="@+id/friend_handle_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_btn"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            style="@style/freesentation6_20sp_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/friend_handle_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="친구 관리"
            style="@style/pretendard_22sp_semibold"
            android:textColor="@color/Black"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/friend_handle_back_btn"
            app:layout_constraintTop_toTopOf="@id/friend_handle_back_btn"
            app:layout_constraintBottom_toBottomOf="@id/friend_handle_back_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 검색창 -->
    <androidx.cardview.widget.CardView
        android:id="@+id/friend_handle_search_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friend_handle_topbar"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="12dp">

            <!--검색 이미지-->
            <ImageView
                android:id="@+id/friend_handle_search_imv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_search_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <!-- 친구 검색 텍스트 -->
            <EditText
                android:id="@+id/friend_handle_search_edt"
                style="@style/pretendard_16sp_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="친구 ID를 입력하세요."
                android:fontFamily="@font/pretendard_medium"
                android:textSize="16sp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/Gray1"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


    <!--2지선다 - 검색이냐 기본이냐 -->
    <FrameLayout
        android:id="@+id/friend_handle_result_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friend_handle_search_view"
        app:layout_constraintBottom_toBottomOf="parent"
        >


        <!--2개의 동적 recycler-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/friend_handle_search_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginVertical="20dp"
            android:visibility="invisible"
            />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/friend_handle_double_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구 요청"
                    style="@style/pretendard_16sp_semibold"
                    android:textColor="@color/Black"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="24dp"/>

                <TextView
                    android:id="@+id/friend_request_empty_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="친구 요청 목록이 없습니다."
                    style="@style/pretendard_14sp_semibold"
                    android:textColor="@color/Gray1"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:visibility="visible"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/friend_request_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="20dp"
                    />

                <View
                    android:id="@+id/friend_handle_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="12dp"
                    android:background="#E4E4E4"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친구 삭제"
                    style="@style/pretendard_16sp_semibold"
                    android:textColor="@color/Black"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="24dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/friend_delete_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="20dp"
                    />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>