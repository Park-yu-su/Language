<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tts_volume_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTS 음량"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tts_volume_value_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tts_volume_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:text="50"
        android:textSize="20sp"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.slider.Slider
        android:id="@+id/tts_volume_slider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tts_volume_value_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:valueFrom="0"
        app:valueTo="100"
        app:stepSize="1"
        android:layout_marginTop="8dp"
        app:value="50" />

    <TextView
        android:id="@+id/vibration_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테스트 시 진동"
        app:layout_constraintTop_toBottomOf="@id/tts_volume_slider"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/vibration_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vibration_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:checked="false" />

</androidx.constraintlayout.widget.ConstraintLayout>