<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/setting_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_btn"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            style="@style/freesentation6_20sp_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/setting_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설정"
            style="@style/pretendard_22sp_semibold"
            android:textColor="@color/Black"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/setting_back_btn"
            app:layout_constraintTop_toTopOf="@id/setting_back_btn"
            app:layout_constraintBottom_toBottomOf="@id/setting_back_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tts_volume_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTS 음량"
        app:layout_constraintTop_toBottomOf="@id/setting_topbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        style="@style/pretendard_16sp_semibold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/tts_volume_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tts_volume_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <SeekBar
            android:id="@+id/volume_seek_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:thumbTint="@color/Main1_1"
            android:progressTint="@color/Main1_1"
            android:progressBackgroundTint="@color/Main1_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp" />

        <TextView
            android:id="@+id/volume_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:text="0"
            android:textSize="16sp"
            android:textColor="@color/Main1_1"
            app:layout_constraintStart_toStartOf="@id/volume_seek_bar"
            app:layout_constraintTop_toBottomOf="@id/volume_seek_bar" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/border_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorStoreBoxIcon"
        app:layout_constraintTop_toBottomOf="@id/tts_volume_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/vibe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테스트 시 진동"
        app:layout_constraintTop_toBottomOf="@id/border_line"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"
        style="@style/pretendard_16sp_semibold" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/vibe_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:showText="true"
        android:textOn="ON"
        android:textOff="OFF"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:track="@drawable/custom_switch_track"
        android:thumb="@drawable/custom_switch_thumb"
        app:trackTint="@color/switch_track_selector"
        app:thumbTint="@color/white"
        android:thumbTextPadding="16dp"
        android:switchMinWidth="100dp"
        app:layout_constraintTop_toBottomOf="@id/border_line"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>