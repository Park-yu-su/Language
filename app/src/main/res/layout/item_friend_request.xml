<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="10dp"
    android:backgroundTint="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="12dp">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/status_guide_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.8" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/status_guide_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.37" />

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/friendRequest_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_home"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 친구 이름 텍스트 뷰 -->
        <TextView
            android:id="@+id/friendRequest_tv_name"
            style="@style/freesentation5_24sp_title"
            android:textSize="22sp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:scaleType="centerCrop"
            android:text="닉네임"
            app:layout_constraintStart_toEndOf="@id/friendRequest_profile"
            app:layout_constraintEnd_toStartOf="@id/status_guide_line2"
            app:layout_constraintTop_toTopOf="@id/friendRequest_profile"
            app:layout_constraintTop_toBottomOf="@id/friendRequest_profile"/>


        <TextView
            android:id="@+id/friendReqest_tv_status"
            style="@style/freesentation5_16sp_icon"
            android:text="(자기소개)"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/status_guide_line2"
            app:layout_constraintEnd_toStartOf="@id/status_guide_line"
            app:layout_constraintTop_toTopOf="@id/friendRequest_tv_name"
            app:layout_constraintBottom_toBottomOf="@id/friendRequest_tv_name"
            android:maxLines="2"
            android:ellipsize="end"
            android:breakStrategy="simple"
            android:hyphenationFrequency="none"
            android:includeFontPadding="false" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/friendRequest_accept_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:backgroundTint="@null"
            app:iconGravity="textStart"
            app:iconTint="@null"
            android:layout_width="41dp"
            android:layout_height="26dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/bg_btn_primary_press"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/friendRequest_reject_btn"
            app:layout_constraintStart_toEndOf="@id/status_guide_line"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/friendRequest_accept_tv"
            style="@style/freesentation4_16sp"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/friendRequest_accept_btn"
            app:layout_constraintEnd_toEndOf="@id/friendRequest_accept_btn"
            app:layout_constraintStart_toStartOf="@id/friendRequest_accept_btn"
            app:layout_constraintTop_toTopOf="@id/friendRequest_accept_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수락" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/friendRequest_reject_btn"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            app:backgroundTint="@null"
            app:iconGravity="textStart"
            app:iconTint="@null"
            android:layout_width="41dp"
            android:layout_height="26dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/bg_btn_white_press"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:layout_constraintTop_toBottomOf="@id/friendRequest_accept_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/status_guide_line"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/friendRequest_reject_tv"
            style="@style/freesentation4_16sp"
            app:layout_constraintBottom_toBottomOf="@id/friendRequest_reject_btn"
            app:layout_constraintEnd_toEndOf="@id/friendRequest_reject_btn"
            app:layout_constraintStart_toStartOf="@id/friendRequest_reject_btn"
            app:layout_constraintTop_toTopOf="@id/friendRequest_reject_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="거절" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
