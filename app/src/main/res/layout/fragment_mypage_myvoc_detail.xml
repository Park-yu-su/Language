<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG"
    tools:context=".ui.mypage.MypageMyvocDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/manage_my_voc_detail_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/manage_my_voc_detail_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_btn"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            style="@style/freesentation6_20sp_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/voc_detail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/manage_my_voc_detail_topbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/voc_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/voc_num_tv"
            android:text="단어장 이름"
            style="@style/pretendard_22sp_semibold" />

        <ImageButton
            android:id="@+id/delete_voc_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/voc_name_tv"
            app:layout_constraintBottom_toTopOf="@id/voc_num_tv"
            android:src="@drawable/ic_trash"
            android:backgroundTint="@color/transparent" />

        <TextView
            android:id="@+id/voc_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/voc_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="N개"
            style="@style/pretendard_14sp_medium" />

        <LinearLayout
            android:id="@+id/tag_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/voc_num_tv"
            app:layout_constraintBottom_toTopOf="@id/set_tag_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageButton
            android:id="@+id/set_tag_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tag_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_set_tag"
            android:backgroundTint="@color/transparent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/voc_id_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:src="@drawable/bg_voc_rounded"
        app:layout_constraintTop_toBottomOf="@id/voc_detail_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="단어장 ID"
        style="@style/pretendard_16sp_semibold"
        app:layout_constraintTop_toTopOf="@id/voc_id_bg"
        app:layout_constraintBottom_toBottomOf="@id/voc_id_bg"
        app:layout_constraintStart_toStartOf="@id/voc_id_bg"
        android:layout_marginStart="12dp" />

    <TextView
        android:id="@+id/voc_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a123456789"
        style="@style/pretendard_16sp_medium"
        android:textColor="@color/Gray1"
        app:layout_constraintTop_toTopOf="@id/voc_id_bg"
        app:layout_constraintBottom_toBottomOf="@id/voc_id_bg"
        app:layout_constraintEnd_toStartOf="@id/id_copy_btn"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@id/id_copy_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_copy"
        android:backgroundTint="@color/transparent"
        app:layout_constraintTop_toTopOf="@id/voc_id_bg"
        app:layout_constraintBottom_toBottomOf="@id/voc_id_bg"
        app:layout_constraintEnd_toEndOf="@id/voc_id_bg" />

    <View
        android:id="@id/border_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorStoreBoxIcon"
        app:layout_constraintTop_toBottomOf="@id/voc_id_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />

    <ImageButton
        android:id="@+id/delete_word_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/border_line"
        app:layout_constraintBottom_toTopOf="@id/mypage_word_list_recyclerview"
        app:layout_constraintEnd_toStartOf="@id/add_word_btn"
        android:src="@drawable/ic_delete_word"
        android:backgroundTint="@color/transparent"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:id="@+id/add_word_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/border_line"
        app:layout_constraintBottom_toTopOf="@id/mypage_word_list_recyclerview"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add_word"
        android:backgroundTint="@color/transparent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mypage_word_list_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingVertical="20dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/delete_word_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>