<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/BG"
    android:fitsSystemWindows="true"
    tools:context=".ui.chat.ChatFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chat_recyclerview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:background="#F5F5F5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/chat_input_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_chat_message_user" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_input_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:paddingVertical="12dp"
        android:background="@color/transparent"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/chat_menu_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_memu_chatbot"
            android:background="@drawable/bg_chat_rounded"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


        <EditText
            android:id="@+id/chat_text_edt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:hint="메시지 입력"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_rounded_edittext"
            android:imeOptions="actionSend"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLines="5"
            android:textColor="@color/Black"
            android:textColorHint="#AAAAAA"
            android:layout_marginHorizontal="8dp"
            app:layout_constraintStart_toEndOf="@id/chat_menu_btn"
            app:layout_constraintEnd_toStartOf="@id/chat_send_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />


        <View
            android:id="@+id/chat_send_animate_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_chat_rounded_animate"
            android:elevation="0dp"
            app:layout_constraintTop_toTopOf="@id/chat_send_btn"
            app:layout_constraintBottom_toBottomOf="@id/chat_send_btn"
            app:layout_constraintStart_toStartOf="@id/chat_send_btn"
            app:layout_constraintEnd_toEndOf="@id/chat_send_btn"
            />

        <ImageButton
            android:id="@+id/chat_send_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerInside"
            android:background="@drawable/bg_chat_rounded"
            android:src="@drawable/ic_mic_chat"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>