<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.makeVoc.MakeVocFragment">

    <ImageButton
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/border_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/voca_txt"
        android:background="@drawable/ic_arrow_left"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/voca_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_btn"
        android:text="단어장"
        android:textSize="22sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginTop="30dp"
        android:layout_marginStart="4dp" />

    <View
        android:id="@+id/border_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/voca_txt"
        app:layout_constraintBottom_toTopOf="@id/voca_that_i_made_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/Gray4"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/voca_that_i_made_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/border_line"
        app:layout_constraintStart_toStartOf="parent"
        android:text="내가 만든 단어장"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp"/>

    <Button
        android:id="@+id/add_voc_in_exit_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기존 단어장에 추가하기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/add_new_voc_btn"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/freesentation_5medium" />

    <Button
        android:id="@+id/add_new_voc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    새 단어장 만들기    "
        android:layout_marginBottom="174dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/add_voc_in_exit_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/freesentation_5medium" />

</androidx.constraintlayout.widget.ConstraintLayout>