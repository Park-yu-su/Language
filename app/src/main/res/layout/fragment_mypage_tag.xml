<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG"
    tools:context=".ui.mypage.MypageTagFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/set_tag_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/set_tag_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_btn"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            style="@style/freesentation6_20sp_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/set_tag_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="태그 설정"
            style="@style/pretendard_22sp_semibold"
            android:textColor="@color/Black"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/set_tag_back_btn"
            app:layout_constraintTop_toTopOf="@id/set_tag_back_btn"
            app:layout_constraintBottom_toBottomOf="@id/set_tag_back_btn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@id/voc_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_tag_topbar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="단어장 이름"
        style="@style/pretendard_20sp_semibold"
        android:layout_marginTop="34dp"
        android:layout_marginStart="20dp" />

    <ImageButton
        android:id="@+id/add_tag_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/set_tag_topbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_add_tag"
        android:backgroundTint="@color/transparent"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp" />

    <LinearLayout
        android:id="@+id/tag_list_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/voc_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>