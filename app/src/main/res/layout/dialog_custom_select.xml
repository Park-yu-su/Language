<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:backgroundTint="@color/transparent"
    android:layout_marginHorizontal="50dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/dialog_message_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingHorizontal="24dp"
            android:paddingVertical="30dp"
            android:text="단어장 2(ID_idabc)를 \n내 단어장에 추가하시겠습니까?"
            android:gravity="center"
            style="@style/pretendard_16sp_medium"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dialog_cancel_cdv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:backgroundTint="#FAFAFA"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/dialog_ok_cdv"
            app:layout_constraintTop_toBottomOf="@id/dialog_message_tv"
            app:layout_constraintBottom_toBottomOf="parent" >

            <TextView
                android:id="@+id/dialog_cancel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="취소"
                style="@style/pretendard_16sp_semibold"
                android:textSize="18sp"
                android:textColor="@color/Gray1" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dialog_ok_cdv"
            android:layout_width="0dp"
            android:layout_height="60dp"
            app:cardCornerRadius="0dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:backgroundTint="@color/Main1_1"
            app:layout_constraintStart_toEndOf="@id/dialog_cancel_cdv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/dialog_cancel_cdv"
            app:layout_constraintBottom_toBottomOf="parent" >

            <TextView
                android:id="@+id/dialog_ok_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="추가"
                style="@style/pretendard_16sp_semibold"
                android:textColor="@color/white" />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>