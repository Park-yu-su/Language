<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.makeVoc.AddNewVocFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/add_new_voc_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/add_new_voc_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_btn"
            android:layout_marginStart="10dp"
            android:visibility="visible"
            style="@style/freesentation6_20sp_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/add_new_voc_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어장 생성"
            style="@style/pretendard_22sp_semibold"
            android:textColor="@color/Black"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toEndOf="@id/add_new_voc_back_btn"
            app:layout_constraintTop_toTopOf="@id/add_new_voc_back_btn"
            app:layout_constraintBottom_toBottomOf="@id/add_new_voc_back_btn"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/insert_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/add_new_voc_topbar"
        app:layout_constraintStart_toStartOf="parent"
        android:text="정보 입력하기"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/Main1_1"
        android:layout_marginTop="24dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/insert_voc_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/insert_info_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:text="단어장 이름을 입력하세요"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout_outlined"
        android:layout_width="320dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/insert_voc_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="단어장 이름"
        app:hintTextAppearance="@style/MyHintText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/insert_voc_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/insert_tag_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_input_layout_outlined"
        app:layout_constraintStart_toStartOf="parent"
        android:text="단어장에 태그를 추가하세요"
        android:textSize="20sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tag_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="태그 (입력 후 엔터)"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/insert_tag_tv">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_tag_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/tag_chip_group"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tag_input_layout" />

    <ImageButton
        android:id="@+id/add_new_voc_next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/ic_next_btn"
        android:backgroundTint="@color/transparent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>